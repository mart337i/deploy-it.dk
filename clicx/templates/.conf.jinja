# CLICX Configuration File
# Server Configuration
[server]
# Server settings
host= "127.0.0.1"
port= 8000
uds= null
fd= null

# Loop and protocol settings
loop= "auto"
http= "auto"
ws= "auto"
ws_max_size= 16777216
ws_max_queue= 32
ws_ping_interval= 20.0
ws_ping_timeout= 20.0
ws_per_message_deflate= true

# Application settings
lifespan= "auto"
interface= "auto"
factory= false

# Reload settings
reload= false
reload_dirs= null
reload_includes= null
reload_excludes= null
reload_delay= 0.25

# Workers
workers= null

# Environment
env_file= null

# Logging
log_config= LOGGING_CONFIG  # This refers to a predefined constant
log_level= null
access_log= true
use_colors= null

# Headers and protocol settings
proxy_headers= true
server_header= true
date_header= true
forwarded_allow_ips= null
headers= null

# Path settings
root_path= ""

# Concurrency and connection settings
limit_concurrency= null
backlog= 2048
limit_max_requests= null
timeout_keep_alive= 5
timeout_graceful_shutdown= null

# SSL/TLS settings
ssl_keyfile= null
ssl_certfile= null
ssl_keyfile_password= null
ssl_version= SSL_PROTOCOL_VERSION  # This refers to a predefined constant
ssl_cert_reqs= 0  # Corresponds to ssl.CERT_NONE
ssl_ca_certs= null
ssl_ciphers= "TLSv1"

# HTTP protocol settings
h11_max_incomplete_event_size= null